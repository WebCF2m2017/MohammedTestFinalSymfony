{% extends 'base.html.twig' %}
{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
    {% for article in articles %}
        <ul>
            <li><a href="{{ path('admin_article_show', { 'id': article.id }) }}">{{ article.titre }}</a></li>
        </ul>
    {% endfor %}
    {% endif %}
{% for section in sections %}
        <ul>
            <li><a href="{{ path('admin_section_show',{ 'id': section.id }) }}">{{ section.titre }}</a></li>
        </ul>
{% endfor %}
    {% endblock %}
